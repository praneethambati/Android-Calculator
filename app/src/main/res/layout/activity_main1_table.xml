<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" >


    <TableRow   android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="25dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Value"

            android:textAlignment="textEnd"
            android:gravity="end"
            />

    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="MC"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="MR"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="MS"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="M+"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="M-"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="&#8592;"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="CE"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="C"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="&#177;"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="&#8730;"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="7"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="8"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="9"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="/;"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="%"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="4"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="5"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="6"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="*"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="1/&#935;"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="1"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="2"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="3"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="-"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="="
            android:layout_width="65dp"
            android:layout_height="50dp"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <Button
            android:text="0"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="."
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        <Button
            android:text="+"
            android:layout_width="65dp"
            android:layout_height="50dp"/>
        </TableRow>
</TableLayout>